{
  "defaultSeverity": "error",
  "extends": ["tslint-config-standard"],
  "jsRules": {},
  "rules": {
    "no-console": [true, "log", "error"],
    "no-unused-variable": true,
    "await-promise": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      //"check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "radix": false
  },
  "rulesDirectory": []
}
